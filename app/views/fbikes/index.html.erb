<p id="notice"><%= notice %></p>

<%=form_tag(fbikes_path, :method => "get") do %>
  <%=text_field_tag :search,nil, :placeholder => "Search for bike" %>
  <%submit_tag "Search"%>
<% end %>


<h1>Bike List</h1>

<style>


table {
    width:100%;
}
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th, td {
    padding: 5px;
    text-align: left;
}
table#t01 tr:nth-child(even) {
    background-color: #eee;
}
table#t01 tr:nth-child(odd) {
   background-color:#fff;
}
table#t01 th {
    background-color: black;
    color: white;
}
body {
    background:	#F5F5DC;
     background-size: 100%;
}

</style>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fbikes.each do |fbike| %>
      <tr>
        <td><%= fbike.name %></td>
        <td><%= fbike.description %></td>
        <td><%= fbike.price %></td>
        <td><%= link_to 'Show', fbike %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fbike', new_fbike_path %>
